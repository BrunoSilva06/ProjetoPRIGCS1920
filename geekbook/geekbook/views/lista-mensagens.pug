extends layout

block content
    div.col-md-8
        div.card(style="width: 40rem;")
            if messages.length >0
                each m in messages
                    if m.type == 'text'
                        div.card-header(class='bg-light '+m._id  id="m._id")
                            div.row
                                div.col-md-2
                                    h5
                                        a.float-left(href='/users/'+m.sender.id)
                                            strong #{m.sender.name}
                                    img(class="rounded-circle border border-dark" src='/users/images/'+ m.sender.photo width="50" height="50")  
                                div.col-md-10
                                    p(align="center")
                                        p.float-center #{m.text}
                                        a.float-right(href="#" class="btn btn-success comment" data-id=m.sender.id onclick="return false;" role="button" aria-pressed="true") Responder
                        div(class='widget-area no-padding blank' style="display: none" id='c'+m.sender.id)
                            div.status-upload
                                form(action='/messages/'+m.sender.id method="post")
                                    textarea(type="text" placeholder="Mensagem"  name="text" rows="4" cols="50")
                                    p
                                        button(type="submit" value="submit" class="btn btn-success green")
                                            i(class="fa fa-share") 
                                            a  Enviar Mensagem
            else 
                p NÃ£o tem mensagens
